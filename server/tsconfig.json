{
  "compileOnSave": false,
  "paths": [
    "src/*.ts",
    "src/**/*.ts",
    "../shared/**/*.ts"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "rootDir": "..",
    "outDir": "dist"
  }
}